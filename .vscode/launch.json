    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch BNHelper (sudo)",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/__debug_bin",
            "cwd": "${workspaceFolder}",
            "asRoot": true,
            "console": "integratedTerminal",
            "env": {},
            "args": [],
            "showLog": true,
            "preLaunchTask": "build-debug"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": ["-test.v"]
        }
    ]
}